-- Anti-Lag White Screen with Toggle GUI (Center Bottom)

local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")

-- Xoá GUI cũ nếu có
if CoreGui:FindFirstChild("AntiLagGUI") then
    CoreGui:FindFirstChild("AntiLagGUI"):Destroy()
end

-- Tạo ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "AntiLagGUI"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = CoreGui

-- Tạo Frame trắng (màn hình trắng)
local whiteFrame = Instance.new("Frame", gui)
whiteFrame.Size = UDim2.new(1, 0, 1, 0)
whiteFrame.Position = UDim2.new(0, 0, 0, 0)
whiteFrame.BackgroundColor3 = Color3.new(1, 1, 1)
whiteFrame.Visible = false

-- Nút bật/tắt Anti-Lag
local button = Instance.new("TextButton", gui)
button.Size = UDim2.new(0, 140, 0, 40)
button.AnchorPoint = Vector2.new(0.5, 1)
button.Position = UDim2.new(0.5, 0, 1, -20)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true
button.Text = "Anti-Lag: OFF"

-- Biến trạng thái
local isOn = false

-- Hàm khi click nút
button.MouseButton1Click:Connect(function()
    isOn = not isOn
    whiteFrame.Visible = isOn
    button.Text = isOn and "Anti-Lag: ON" or "Anti-Lag: OFF"
    button.BackgroundColor3 = isOn and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(0, 170, 255)
end)
